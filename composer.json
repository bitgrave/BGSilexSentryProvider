{
    "name": "bitgrave/silex-sentry-provider",
    "type": "library",
    "description":  "another sentry service provider for the silex framework.",
    "keywords": ["sentry", "raven-php", "silex"],
    "homepage": "https://github.com/bitgrave/BGSilexSentryProvider.git",
    "license":  "MIT",
    "authors": [
        {
            "name": "Vitaliy Chesnokov",
            "email": "demateus@gmail.com"
        },
        {
            "name": "Patrick Paechnatz",
            "email": "patrick.paechnatz@gmail.com"
        }
    ],
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/bitgrave/BGRavenPHP.git"
        }
    ],
    "require": {
        "php": ">=5.3.2",        
        "pimple/pimple": "*",
        "silex/silex": "1.*",
        "bitgrave/raven": "1.0.0"
    },
    "require-dev": {
        "satooshi/php-coveralls": "*",
        "phpunit/phpunit": "3.*"
    },
    "autoload": {
        "psr-0": {
            "BG": "src"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    }
}
